<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111166"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AnswersActivity">

    <ImageView
        android:id="@+id/mark_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="24dp"
        tools:src="@tools:sample/avatars"
        app:srcCompat="@drawable/correct_image" />

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="0"
        android:textColor="#686868"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/your_answer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-black"
        android:paddingBottom="32dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="64sp" />

    <ImageView
        android:id="@+id/randy_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:src="@tools:sample/avatars"
        app:srcCompat="@drawable/randy_happy_image" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_marginBottom="32dp"
        android:layout_weight="1"
        android:backgroundTint="#FFEB3B"
        android:fontFamily="sans-serif-black"
        android:text="戻る"
        android:textColor="#000000"
        android:textSize="24sp"
        app:cornerRadius="40dp" />
</LinearLayout>